# Variables de Entorno Adicionales para Integración C4C

# ===== CONFIGURACIÓN API DE DISPONIBILIDAD C4C =====
C4C_AVAILABILITY_BASE_URL=https://my317791.crm.ondemand.com/sap/c4c/odata/cust/v1/cita_x_centro
C4C_AVAILABILITY_TIMEOUT=120
C4C_AVAILABILITY_CACHE_TTL=300

# ===== CONFIGURACIÓN DE SINCRONIZACIÓN =====
C4C_SYNC_ENABLED=true
C4C_SYNC_AUTO_SYNC=true
C4C_SYNC_QUEUE=c4c-sync
C4C_SYNC_RETRY_ATTEMPTS=3
C4C_SYNC_RETRY_DELAY=60

# ===== CONFIGURACIÓN DE COLAS (QUEUES) =====
QUEUE_CONNECTION=database
# Si usas Redis para colas:
# QUEUE_CONNECTION=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ===== CONFIGURACIÓN DE CACHE =====
CACHE_DRIVER=file
# Si usas Redis para cache:
# CACHE_DRIVER=redis

# ===== CONFIGURACIÓN DE LOGS =====
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

